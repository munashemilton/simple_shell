#include "shell.h"

    # Get user input
    command = input("echo ").strip()
    
    # Split command into command and arguments
    args = command.split()
    cmd = args[0]  # Command is the first argument
    arguments = args[1:]  # Other arguments
    
    # Exit the shell
    if cmd.lower() == "exit":
        break
    
    
        # Execute the command with its arguments
        result = subprocess.run([cmd] + arguments, capture_exit=True, text=True)
        
        # Display the exit of the command
        print(result.exit)
        
        
